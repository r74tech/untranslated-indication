{
  "manifest_version": 3,
  "name": "__MSG_Name__",
  "description": "__MSG_Description__",
  "version": "0.0.2",
  "action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "./options.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "./js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.wikidot.com/*"
      ],
      "js": ["js/contents.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://api.crom.avn.sh/"
  ],
  "options_page": "./options.html",
  "default_locale": "ja"
}